{
  "name": "swiftcab-medium",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": " env-cmd  -f .env.development nodemon ./src/server.ts",
    "prod": "env-cmd  -f .env.production nodemon ./src/server.ts",
    "stage": "env-cmd  -f .env.stage nodemon ./src/server.ts",
    "prisma:db:pull:dev": "env-cmd  -f .env.development -- npx prisma db pull && npx tsc",
    "prisma:db:generate:dev": "env-cmd  -f .env.development -- npx prisma generate && npx tsc",
    "prisma:db:pull:prod": "env-cmd  -f .env.production -- npx prisma db pull && npx tsc",
    "prisma:db:generate:prod": "env-cmd  -f .env.production -- npx prisma generate && npx tsc",
    "build:dev": "npx tsc && env-cmd  -f .env.development node ./dist/server.js",
    "build:prod": "npx tsc && env-cmd  -f .env.production node ./dist/server.js ",
    "build:stage": "npx tsc && env-cmd  -f .env.stage node ./dist/server.js",
    "clean:pm2:all": "pm2 delete all || true && pm2 flush",
    
    "global:kafka:consumers:dev:spawn": "node ./consumer_load_balancer/dev/dev_multi_instance.js spawn",
    "global:kafka:consumers:dev:remove": "node ./consumer_load_balancer/dev/dev_multi_instance.js remove",
    "global:kafka:consumers:dev:restart": "node ./consumer_load_balancer/dev/dev_multi_instance.js restart",
    
    "global:kafka:consumers:prod:spawn": "node ./consumer_load_balancer/prod/prod_multi_instance.js spawn",
    "global:kafka:consumers:prod:remove": "node ./consumer_load_balancer/prod/prod_multi_instance.js remove",
    "global:kafka:consumers:prod:restart": "node ./consumer_load_balancer/prod/prod_multi_instance.js restart",

    "init:kafka:driverConsumerPoolInstance:dev": "env-cmd  -f .env.development nodemon ./src/consumer_groups/driver_pool_consumer.ts",
    "init:kafka:userDriverRequestInstance:dev": "env-cmd  -f .env.development nodemon ./src/consumer_groups/kafka_consumer.ts",
    "init:kafka:driverAcceptedRides:dev": "env-cmd -f .env.development nodemon ./src/consumer_groups/driverAcceptRides.ts",

    "init:kafka:driverConsumerPoolInstance:prod": "env-cmd  -f .env.production node ./dist/consumer_groups/driver_pool_consumer.js",
    "init:kafka:userDriverRequestInstance:prod": "env-cmd  -f .env.production node ./dist/consumer_groups/kafka_consumer.js",
    "init:kafka:driverAcceptedRides:prod": "env-cmd -f .env.production node ./dist/consumer_groups/driverAcceptRides.js"

  
  },
