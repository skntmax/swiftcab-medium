    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/redis": "^4.0.11",
    "@types/uuid": "^10.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.0",
    "env-cmd": "^10.1.0",
    "express": "^5.1.0",
    "ioredis": "^5.6.1",
    "jsonwebtoken": "^9.0.2",
    "kafkajs": "^2.2.4",
    "nodemon": "^3.1.10",
    "redis": "^5.5.6",
    "socket.io": "^4.8.1",
    "socket.io-emitter": "^3.2.0",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@types/node": "^24.0.10",
    "@types/socket.io": "^3.0.2",
    "@types/socket.io-emitter": "^3.2.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
